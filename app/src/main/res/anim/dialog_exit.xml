<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate android:fromDegrees="100"
        android:toDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:duration="700"></rotate>

    <scale android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="0"
        android:toYScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="700"></scale>
</set>